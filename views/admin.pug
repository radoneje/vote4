extends _layout
block head
block content
    .content#app
        .mainTower
            .mainGrid
                .mainSection
                    .btn(@click="addEvent()") Добавить мероприятие
            .mainGrid(v-for="event in events")
    script(src="/lib/vue.js")
    script.
        let app=new Vue({
            el:"#app",
            data:{
                events:[]
            },
            methods:{
                addEvent:async function(){
                    let r=await postJson("/api/event",{ownerid:1})
                    events.unshift(r)
                    console.log(r)
                }
            }

        })
