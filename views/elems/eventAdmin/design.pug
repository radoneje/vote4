.eaRow
        .flex.beetwen.vCenter
            .eaTitleGroup.flex.between.vCenter
                .mainSectionTitle Название мероприятия
                .swith(@click="event.isTitle=!event.isTitle;changeEvent(event)" v-bind:class="{active:event.isTitle}")
                    .mainSectionSwithText.On Включено, пользователи видят название
                    .mainSectionSwithText.Off Выключено, пользователи не видят название
                    .swithElem
                        .swithElemDot
                            .swithElemDotCenter
        .mt-3
            input.mainInput.w100(placeholder="Введите название мероприятия" v-model="event.title" v-on:change="changeEvent(event)")
